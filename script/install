#!/usr/bin/env bash

set -e

echo Adding repositories...
sudo add-apt-repository ppa:neovim-ppa/unstable -y

echo Updating repositories...
sudo apt-get update

echo Installing packages...

PACKAGES=(
    arandr
    autojump
    build-essential
    curl
    dkms
    editorconfig
    exuberant-ctags
    git
    git-flow
    htop
    inotify-tools
    libevent-dev
    neovim
    nfs-common
    python3-dev
    python3-pip
    python-dev
    python-pip
    redshift
    silversearcher-ag
    software-properties-common
    tree
    wallch
    x11-xserver-utils
    xclip
    xsel
    zsh
    )

echo Installing ${PACKAGES[@]}
sudo apt-get install -y $(echo ${PACKAGES[@]})

echo Installing oh-my-zsh
if [ ! -f ~/.oh-my-zsh ]; then
	curl -L https://raw.github.com/robbyrussell/oh-my-zsh/master/tools/install.sh | sh
fi

echo Remapping caps lock to control
sudo sed -i "s/XKBOPTIONS=\"\"/XKBOPTIONS=\"ctrl:nocaps\"/g" /etc/default/keyboard

which stack || {
    echo Installing stack
    mkdir -p ~/.local/bin
    curl -sSL https://get.haskellstack.org/ | sh -s - --dest ~/.local/bin
}


echo Installing Haskell tools
stack install hlint ghcid stylish-haskell

which rustup || {
    echo Installing rust
    curl https://sh.rustup.rs -sSf >> rust-install.sh
    bash rust-install.sh -y
    rm rust-install.sh
}

mkdir -p ~/Projects

test ~/Projects/rust || {
    git clone git@github.com:rust-lang/rust ~/Projects/rust
}

pip install --upgrade pip
pip2 install --upgrade pip

pip install neovim
pip2 install neovim

which nix || {
    echo Installing nix...
    curl https://nixos.org/nix/install | sh
}

echo Creating neovim symlinks
mkdir -p ~/.config
ln -sf ~/.nvim ~/.config/nvim

which purs || {
    echo Installing PureScript
    npm install -g purescript pulp bower
}
